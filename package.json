{
  "name": "podcast-downloader",
  "version": "0.1.0",
  "private": true,
  "main": "desktop/main.js",
  "scripts": {
    "dev": "NODE_ENV=development next dev --turbopack",
    "dev:electron": "PORT=${PORT:-3000} ELECTRON_BUILD=1 NEXT_PUBLIC_ELECTRON=1 next dev",
    "build": "next build",
    "build:electron": "ELECTRON_BUILD=1 NEXT_PUBLIC_ELECTRON=1 next build",
    "start": "next start",
    "start:electron": "PORT=${PORT:-3000} ELECTRON_BUILD=1 NEXT_PUBLIC_ELECTRON=1 next start",
    "electron:dev": "concurrently -k \"yarn dev:electron\" \"wait-on http://localhost:${PORT:-3000} && electron desktop/main.js\"",
    "electron:start": "concurrently -k \"yarn start:electron\" \"wait-on http://localhost:${PORT:-3000} && electron desktop/main.js\"",
    "electron:pack": "yarn build:electron && electron-builder --publish=never",
    "lint": "eslint src --ext .ts,.tsx",
    "test:e2e": "playwright test",
    "test": "jest",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.7.4",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@shadcn/ui": "^0.0.4",
    "@tanstack/react-query": "^5.61.0",
    "@tanstack/react-table": "^8.20.5",
    "@testing-library/react": "^16.1.0",
    "biome": "^0.3.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "dompurify": "^3.2.3",
    "downshift": "^8.5.0",
    "embla-carousel": "^8.5.1",
    "embla-carousel-auto-scroll": "^8.5.1",
    "embla-carousel-react": "^8.5.1",
    "lucide-react": "^0.460.0",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.3",
    "next": "15.1.11",
    "next-auth": "^5.0.0-beta.25",
    "next-themes": "^0.4.3",
    "react": "19.0.0-rc-66855b96-20241106",
    "react-day-picker": "^8.10.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "19.0.0-rc-66855b96-20241106",
    "react-share": "^5.1.2",
    "react-window": "^1.8.11",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@playwright/test": "^1.49.1",
    "@testing-library/dom": "^9.3.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.1.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "next-sitemap": "^4.2.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.podcasttomp3.desktop",
    "productName": "PodcastToMp3",
    "files": [
      "desktop/**",
      ".next/**",
      "!.next/cache/**",
      "!**/*.map",
      "public/**",
      "package.json",
      "next.config.*"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "public/web-app-manifest-512x512.png"
    },
    "win": {
      "icon": "public/favicon.ico"
    },
    "linux": {
      "icon": "public/web-app-manifest-512x512.png"
    }
  }
}
